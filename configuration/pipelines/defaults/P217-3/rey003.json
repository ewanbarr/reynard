{
    "backend":"effpaf",
    "nodes": [
    {% for node in nodes%}
    {
        "host": "{{node['host']}}",
        "port": {{node['port']}},
        "pipelines":
        [
            {
                "name":"pipeline-0",
                "pipeline_name":"PafFrbPipeline",
                "config":
                {
                    "image":"docker.mpifr-bonn.mpg.de:5000/paf-pipeline:latest",
                    "output_path":"/beegfs/paf/filterbanks",
                    "config_file_params":
                    [
                        "IP {{node['nics'][0]}} {{node['nics'][1]}}",
                        "GPU_ID 0 1",
                        "NGPUS 2",
                        "SOURCE dummysource",
                        "TELESCOPE_ID 8",
                        "MACHINE_ID 9",
                        "RA 0.0",
                        "DEC 0.0",
                        "BEAM 0 1"
                    ]
                }
            }
        ]
    }
    {% if not loop.last %},{% endif %}
    {% endfor %}

    ]
}