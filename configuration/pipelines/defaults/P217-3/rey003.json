{
    "backend":"effpaf",
    "nodes": [
    {% for node in nodes%}
    {
        "host": "{{node['host']}}",
        "port": {{node['port']}},
        "pipelines":
        [
            {
                "name":"pipeline-0",
                "pipeline_name":"PafFrbPipeline",
                "config":
                {
                    "image":"paf-pipeline",
                    "output_path":"/media/scratch/data/paf/filterbanks",
                    "config_file_params":
                    [
                        "IP {{node['nics'][0]}}, {{node['nics'][1]}}",
                        "GPU_ID 0, 1",
                        "SOURCE dummysource",
                        "TELESCOPE_ID 8",
                        "MACHINE_ID 9",
                        "RA 0.0, 0.0",
                        "DEC 0.0, 0.0"
                    ]
                }
            }
        ]
    }
    {% if not loop.last %},{% endif %}
    {% endfor %}

    ]
}