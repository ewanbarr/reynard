{
    "nodes": [
    {% for node in nodes%}
    {
        "host": "{{node['host']}}",
        "port": {{node['port']}},
        "pipelines":
        [
            {
                "name":"pipeline-0",
                "pipeline_name":"DspsrPipeline",
                "config":
                {
                    "base_output_dir":"/media/titan0/reynard_tests/",
                    "base_monitor_dir":"/home/share/monitors/",
                    "udp2db_params":
                    {
                        "image":"docker.mpifr-bonn.mpg.de:5000/psr-capture:asterix",
                        "args":"-v -p 48500 -s 18000",
                    },
                    "psrchive_params":{
                        "image":"docker.mpifr-bonn.mpg.de:5000/psrchive:latest",
                        "cmd":"python archive_directory_monitor.py -i /input/ -o /output/"
                    },
                    "dspsr_params":
                    {
                        "image":"docker.mpifr-bonn.mpg.de:5000/dspsr:cuda8.0",
                        "args":"-cpu 2,3 -L 10 -r -F 256:D -fft-bench -cuda 0,0 -minram 1024"
                    },
                    "dada_db_params":
                    {
                        "image":"docker.mpifr-bonn.mpg.de:5000/psr-capture:asterix",
                        "args":"-n 8 -b 1280000000 -p -l",
                        "key":"dada"
                    },
                    "dada_dbmonitor_params":
                    {
                        "image":"docker.mpifr-bonn.mpg.de:5000/psr-capture:asterix",
                        "args":""
                    },
                    "dada_header_params":
                    {
                        "filesize":25600000000,
                        "telescope":"Effelsberg",
                        "instrument":"asterix",
                        "frequency_mhz":1370,
                        "receiver_name":"P217-3",
                        "bandwidth":320,
                        "tsamp":0.00156250,
                        "nbit":8,
                        "ndim":1,
                        "npol":2,
                        "nchan":1,
                        "resolution":1,
                        "dsb":1
                    }
                }
            }
        ]
    }
    {% if not loop.last %},{% endif %}
    {% endfor %}
    ]
}